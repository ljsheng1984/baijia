
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" Content="width=device-width, initial-scale=1" />
    <title>订单调试</title>
    <link rel="stylesheet" href="~/plugins/zui/css/zui.min.css">
    <link href="~/plugins/zui/lib/uploader/zui.uploader.min.css" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm("OrderPay", "LJSheng", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label class="col-sm-2">订单号</label>
            <div class="col-md-2 col-sm-2">
                <input type="text" name="OrderNo" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">网银号</label>
            <div class="col-md-3 col-sm-5 has-success">
                <input type="text" name="TradeNo" class="form-control" placeholder="必填项">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">价格</label>
            <div class="col-md-3 col-sm-5">
                <input type="text" name="PayPrice" class="form-control" placeholder="必填项,只能是数字" onkeyup="value=value.replace(/[^\d.]/g,'');">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">支付类型</label>
            <div class="col-md-2 col-sm-2 has-success">
                <input type="text" name="PayType" value="3" class="form-control" placeholder="必填,只能是数字" onkeyup="value=value.replace(/[^\d]/g,'');">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-3">
                <button class="btn btn-primary btn-lg btn-block" type="submit">提交</button>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">操作状态</label>
            <div class="col-md-2 col-sm-2 has-success">
                @ViewBag.TF <input name="type" value="@Request.QueryString["type"]" hidden />
            </div>
        </div>
    }
</body>
</html>
