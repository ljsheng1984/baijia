
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=yes">
    <title>彩链-搜索商品</title>
    <meta name="keywords" content="彩链">
    <meta name="description" content="彩链">
    <meta name="author" content="彩链">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
    <div class="shop-order-detial">
        <div class="shop-order-header-new">
            <a href="/SMall/Index">
                <img src="/images/icon/icon-26.png" class="shop-order-header-back" />
            </a>
            <div class="shop-order-search">
                <input type="text" id="search" placeholder="搜索商品" />
                <img src="/images/icon/icon-37.png" />
            </div>
            <div class="shop-order-header-right" onclick="ss();">
                搜索
            </div>
        </div>
    </div>
    <div class="search-back">

    </div>
    <script src="/js/jquery.js"></script>
    <script>
        //搜索框聚焦
        $("#search-input").focus(function () {
            $(".search-back").addClass("active");
        });
        //搜索框失焦
        $("#search-input").blur(function () {
            $(".search-back").removeClass("active");
        });
        function ss() {
            self.location = "/SMall/SProduct?Name=" + $("#search").val();
        }
    </script>
</body>
</html>