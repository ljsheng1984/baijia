@{
    ViewBag.Class = "Member";
    ViewBag.Title = "个人中心";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="user-sub">
    <img src="@ViewBag.Picture" onerror="this.src='/images/nopic.png'" />
    <span class="text">@ViewBag.Name@(ViewBag.State == 1 ? "(审核中)" : "")</span>
    <div class="level" onclick="self.location = '/Member/Info';">
        &nbsp;&nbsp;
        <i class="icon-arrow-right"></i>
    </div>
    <a class="edit" href="/Member/Index">返回个人中心</a>
</div>
<div class="user-divider">商家服务</div>
<ul class="admin-menu">
    <li>
        <a href="/Shop/Info">
            <div>
                <i class="icon icon-knock"></i>
            </div>
            <p class="tit">商家信息</p>
        </a>
    </li>
    <li>
        <a href="/Shop/Money">
            <div>
                <i class="icon icon-fenhong"></i>
            </div>
            <p class="tit">积分兑换</p>
        </a>
    </li>
    <li>
        <a href="/Shop/Order?tab=0">
            <div>
                <i class="icon icon-profit"></i>
            </div>
            <p class="tit">订单(<b>@ViewBag.Order</b>)</p>
        </a>
    </li>
    <li>
        <a href="/Shop/CLMoney">
            <div>
                <i class="icon icon-fenhong"></i>
            </div>
            <p class="tit">彩链包额度</p>
        </a>
    </li>
</ul>
<div class="user-divider">商品管理</div>
<ul class="admin-menu">
    <li>
        <a href="/Shop/ShopClassify">
            <div>
                <i class="icon icon-order"></i>
            </div>
            <p class="tit">分类管理</p>
        </a>
    </li>
    <li>
        <a href="/Shop/Product">
            <div>
                <i class="icon icon-storehouse"></i>
            </div>
            <p class="tit">商品管理</p>
        </a>
    </li>
    <li>
        <a href="/Shop/ProductAU">
            <div>
                <i class="icon icon-goods-money"></i>
            </div>
            <p class="tit">发布商品</p>
        </a>
    </li>
    <li></li>
</ul>
<div class="user-divider">证件审核</div>
<ul class="admin-menu">
    <li></li>
    <li>
        <a href="/Shop/USCI">
            <div>
                <i class="icon icon-recommend"></i>
            </div>
            <p class="tit">营业执照</p>
        </a>
    </li>
    <li>
        <a href="/Shop/LegalPerson">
            <div>
                <i class="icon icon-recommend"></i>
            </div>
            <p class="tit">法人证件</p>
        </a>
    </li>
    <li></li>
</ul>
<script>
    if (@ViewBag.State==1) {
        layer.open({
            content: '请完成商家信息和上传证件完成审核(个人只需在法人证件上传身份证即可)'
            , skin: 'msg'
            , time: 5
        });
    }
</script>