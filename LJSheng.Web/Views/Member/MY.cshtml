
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=yes">
    <title>链商城-我的</title>
    <meta name="keywords" content="链商城">
    <meta name="description" content="链商城">
    <meta name="author" content="链商城">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
    <div class="default-header-nav">
        <span>
            <a href="/Member/Index">
                <img src="/images/icon/icon-26.png" />
            </a>
        </span> 积分
    </div>
    <div class="center">
        <!--我的头部-->
        <div class="center-header integral-center">
            <div class="center-header-content">
                <div class="center-header-msg">
                    <div class="center-header-avatar">
                        <img src="/uploadfiles/member/@ViewBag.Picture" onerror="this.src='/images/@(ViewBag.Gender +".png")'" />
                    </div>
                    <div class="center-header-text">
                        <p>@ViewBag.Account (@ViewBag.RealName)</p>
                        <p class="label @ViewBag.CLLabel">@ViewBag.CLLevelName</p>
                    </div>
                </div>
            </div>
        </div>
        <!--积分-->
        <div class="integral-box">
            <div class="default-block integral default-block-integral">
                <div class="default-block-title">
                    奖励积分
                </div>
                <a class="integral-content integral-center-content" href="/Member/Integral?tab=1">
                    <div class="integral-item">
                        <img src="/images/icon/icon-3.png" />
                        <p>可提积分 <span>@ViewBag.Money</span></p>
                    </div>
                    <img class="integral-item-arrow" src="/images/icon/icon-24.png" />
                </a>
            </div>
            <div class="default-block integral default-block-integral">
                <div class="default-block-title">
                    购物积分
                </div>
                <a class="integral-content integral-center-content" href="/Member/Integral?tab=2">
                    <div class="integral-item">
                        <img src="/images/icon/icon-3.png" />
                        <p>可提积分 <span>@ViewBag.Integral</span></p>
                    </div>
                    <img class="integral-item-arrow" src="/images/icon/icon-24.png" />
                </a>
            </div>
            <div class="default-block integral default-block-integral">
                <div class="default-block-title">
                    能量塔货款
                </div>
                <a class="integral-content integral-center-content" href="/Member/Withdrawals">
                    <div class="integral-item">
                        <img src="/images/icon/icon-3.png" />
                        <p>可提货款 <span>@ViewBag.ProductMoney</span></p>
                    </div>
                    <img class="integral-item-arrow" src="/images/icon/icon-24.png" />
                </a>
            </div>
            <div class="default-block integral default-block-integral">
                <div class="default-block-title">
                    能量塔积分兑换明细
                </div>
                <a class="integral-content integral-center-content" href="/Member/Withdrawals">
                    <div class="integral-item">
                        <img src="/images/icon/icon-3.png">
                        <p>兑换明细 <span></span></p>
                    </div>
                    <img class="integral-item-arrow" src="/images/icon/icon-24.png">
                </a>
            </div>

        </div>
    </div>
</body>
</html>