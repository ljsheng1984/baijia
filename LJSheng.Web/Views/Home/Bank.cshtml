@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=yes">
    <title>链商城-线下收款</title>
    <meta name="keywords" content="链商城">
    <meta name="description" content="链商城">
    <meta name="author" content="链商城">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body>
    <div class="default-header-nav">
        <span>
            <a href="/Member/@(Request.QueryString["Type"]=="1"?"Order":"ShopOrder")?tab=4">
                <img src="/images/icon/icon-26.png" />
            </a>
        </span> 线下收款
    </div>
    @using (Html.BeginForm("Bank", "Home", new { Type = Request.QueryString["Type"]}, FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
    {
    <div class="withdrawal offline-payment">
        <div class="withdrawal-content">
            <div class="withdrawal-operation">
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">汇款金额</span>
                    <input type="text" placeholder="0" value="@Request.QueryString["Money"]" readonly />
                </div>
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">订单号</span>
                    <input type="text" placeholder="核对订单号" name="OrderNo" value="@Request.QueryString["OrderNo"]" readonly />
                </div>
            </div>
            <div class="withdrawal-operation">
                <p class="offline-payment-title">收款信息</p>
                <div class="withdrawal-operation-input withdrawal-operation-input-new">
                    <span class="withdrawal-operation-tag">姓名</span>
                    <span class="withdrawal-operation-num">陈曦</span>
                </div>
                <div class="withdrawal-operation-input withdrawal-operation-input-new">
                    <span class="withdrawal-operation-tag">卡号</span>
                    <span class="withdrawal-operation-num">62290811301750918</span>
                </div>
                <div class="withdrawal-operation-input withdrawal-operation-input-new">
                    <span class="withdrawal-operation-tag">银行</span>
                    <span class="withdrawal-operation-num">兴业银行</span>
                </div>
                <div class="withdrawal-text">
                    <span>开户行地址:兴业银行福建省福州分行五四路支行</span>
                </div>
                <div class="withdrawal-operation-input">
                    <div class="text text-right"><img id="upimg" src="/uploadfiles/voucher/@Request.QueryString["Voucher"]" onerror="this.src='/images/nopic.png'" /></div>
                </div>
                <input type="file" name="Picture" id="Picture" style="opacity:0.0;filter:alpha(opacity=20);width:388px;height:38px;" />
                <div style="margin-top:-18px;"><span class="credentials">选择付款凭证</span></div>
            </div>
        </div>
        <div class="padding-btn-group" style="margin-top:50px;">
            <textarea id="base64Data" name="base64Data" hidden></textarea>
            <button id="btn" type="submit" onclick="return check();">上传付款凭证</button>
        </div>
    </div>
    }
    <script src="~/js/jquery.js"></script>
    <script src="~/js/image.js"></script>
    <script>
        function check() {
            if ($("#base64Data").val() < 88) {
                alert("请选择上传付款凭证");
                return false;
            }
            document.getElementById("btn").disabled = true;
            document.getElementById("btn").style.display = "none";
            document.forms[0].submit();
        }
    </script>
</body>
</html>