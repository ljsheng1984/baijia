@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=yes">
    <title>彩链-线下收款</title>
    <meta name="keywords" content="彩链">
    <meta name="description" content="彩链">
    <meta name="author" content="彩链">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body>
    <div class="default-header-nav">
        <span>
            <a href="/Member/@(Request.QueryString["Type"]=="1"?"Order":"ShopOrder")?tab=4">
                <img src="/images/icon/icon-26.png" />
            </a>
        </span> 线下收款
    </div>
    @using (Html.BeginForm("Bank", "Home", new { Type = Request.QueryString["Type"]}, FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
    {
    <div class="withdrawal offline-payment">
        <div class="withdrawal-content">
            <div class="withdrawal-operation">
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">汇款金额</span>
                    <input type="text" placeholder="0" value="@Request.QueryString["Money"]" readonly />
                </div>
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">订单号</span>
                    <input type="text" placeholder="核对订单号" name="OrderNo" value="@Request.QueryString["OrderNo"]" readonly />
                </div>
            </div>
            <div class="withdrawal-operation">
                <p class="offline-payment-title">请汇款到以下帐号</p>
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">姓名</span>
                    <input type="text" placeholder="收款人姓名" readonly />
                </div>
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">卡号</span>
                    <input type="text" placeholder="收款人卡号" readonly />
                </div>
                <div class="withdrawal-operation-input">
                    <span class="withdrawal-operation-tag">银行</span>
                    <input type="text" placeholder="开户行" readonly />
                </div>
                <div class="withdrawal-text">
                    <span>开户行地址：兴业银行福建省福州分行五四路支行</span>
                </div>
                <input type="file" name="Picture" id="Picture" style="position:absolute;opacity:0.0;filter:alpha(opacity=20);width:388px;height:58px;" />
                <div class="text text-right"><img id="upimg" src="/uploadfiles/voucher/@Request.QueryString["Voucher"]" /></div>
                <div><span class="credentials">选择付款凭证</span></div>
            </div>
        </div>
        <div class="padding-btn-group" style="margin-top:50px;">
            <textarea id="base64Data" name="base64Data" hidden></textarea>
            <button type="submit">上传付款凭证</button>
        </div>
    </div>
    }
    <script src="~/js/jquery.js"></script>
    <script src="~/js/image.js"></script>

</body>
</html>