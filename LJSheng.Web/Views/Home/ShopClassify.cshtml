@{
    ViewBag.Class = "Shop";
    ViewBag.Title = "商城";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="sub-header" id="search">
    <a class="icon-arrow-left" onclick="history.go(-1);">返回</a>
    <div class="search-box" onclick="self.location = '/SMall/IndexSearch';">
        <input type="text" name="Name" class="text" placeholder="商品名称" />
    </div>
    <input type="text" name="pageindex" value="1" hidden />
    <input type="text" name="pagesize" value="50" hidden />
    <input type="text" name="ClassifyGid" hidden />
    <input type="text" name="number" value="1" hidden />
    <input type="text" id="ShopGid" name="ShopGid" value="@Request.QueryString["Gid"]" hidden />
</div>
<!--分类内容-->
<div class="classify-container">
    <ul class="menu" id="menu"></ul>
    <div class="detail" id="list"></div>
</div>
<script src="~/js/shop.js"></script>